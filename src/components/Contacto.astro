---
import ContactForm from "./ContactForm.astro"
import Section from "./Section.astro"
---

<Section
  title="Contacto"
  subtitle="¿Tienes alguna pregunta? Escríbenos"
  color="black" 
  id="contacto"
  showFooterContent="true"
>
  <div slot="footer" class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto px-4 w-full py-12">
    <!-- Sección de contacto principal -->

    <ContactForm />


    <!-- Sección de contacto alternativo -->
    <div class="flex flex-col justify-center">
      <div class="bg-transparent rounded-xl shadow-lg p-8 h-full flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-bold text-white mb-4">Otras formas de contacto</h3>
          <div class="space-y-6">
            <!-- WhatsApp -->
            <div class="flex items-start gap-4">
              <div class="bg-white/20 p-3 rounded-full flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">WhatsApp</h4>
                <p class="text-white/90 mt-1">Respuesta inmediata</p>
                <a 
                  href="https://wa.me/+523330601213" 
                  target="_blank"
                  class="mt-2 inline-flex items-center text-white font-medium hover:underline"
                >
                  +52 333 060 1213
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="bg-white/20 p-3 rounded-full flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">Correo electrónico</h4>
                <p class="text-white/90 mt-1">Respuesta en 24 horas</p>
                <a 
                  href="mailto:contacto@seguridadindustrial.com" 
                  class="mt-2 inline-flex items-center text-white font-medium hover:underline"
                >
                  contacto@seguridadindustrial.com
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Teléfono -->
            <div class="flex items-start gap-4">
              <div class="bg-white/20 p-3 rounded-full flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">Llámanos</h4>
                <p class="text-white/90 mt-1">Horario: 9am - 6pm</p>
                <a 
                  href="tel:+523330601213" 
                  class="mt-2 inline-flex items-center text-white font-medium hover:underline"
                >
                  +52 333 060 1213
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-8 pt-6 border-t border-white/20">
          <a
            href="https://wa.me/+523330601213"
            target="_blank"
            class="w-full bg-white text-emerald-600 hover:bg-gray-100 font-semibold py-3 px-6 rounded-lg flex items-center justify-center transition-colors shadow-md hover:shadow-lg"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Chatear por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Fondo mejorado -->
  <img
    slot="background"
    alt="Fondo de contacto"
    class="h-full w-full object-cover object-center"
    src="/utilities/contacto.svg"
    id="bg-image-contact"
    loading="lazy"
  />
  
  <!-- Overlay para mejor legibilidad -->
  <div slot="background" class="absolute inset-0 bg-gradient-to-b from-black/30 to-black/60"></div>
</Section>

<script>
  function isEdge() {
    return /Edge|Edg/.test(navigator.userAgent);
  }

  const imageElement = document.querySelector("#bg-image-contact");
  if (imageElement) {
    imageElement.src = isEdge() 
      ? "/utilities/contacto.svg" 
      : "/utilities/contacto.svg";
  }
</script>